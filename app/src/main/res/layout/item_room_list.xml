<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/item_chat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="?android:selectableItemBackground">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phone_cow_head"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/gambar_grup"
            android:id="@+id/iv_chat_avatar"/>

    <com.caltyfarm.caltyfarm.customElements.CustomTextView
            android:id="@+id/tV_chat_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nama_tujuan_chat"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_chat_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>