<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
                android:id="@+id/iv_promo"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        <LinearLayout
                android:id="@+id/layout_halo_cow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@color/white">
            <ImageView
                    android:src="@drawable/ic_touch"
                    android:layout_width="80dp"
                    android:tint="@color/colorAccent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:lines="1"
                        android:text="Halo Cows"/>
                <TextView
                        android:layout_width="wrap_content"

                        android:paddingEnd="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:text="Tanya Jawab langsung dengan dokter hewan dan klinik hewan terdekat"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@color/white">
            <ImageView
                    android:src="@drawable/ic_24h"
                    android:layout_width="80dp"
                    android:tint="@color/colorAccent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:lines="1"
                        android:text="Go-Vet"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:paddingEnd="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:text="Layanan keadaan darurat dan homecare untuk hewan kesayanganmu"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@color/white">
            <ImageView
                    android:src="@drawable/ic_shop"
                    android:layout_width="80dp"
                    android:tint="@color/colorAccent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:lines="1"
                        android:text="Calty Shop"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:paddingEnd="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:text="Beli pakan hewan dan perlengkapan hewan langsung diantar dalam waktu 60 menit"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@color/white">
            <ImageView
                    android:src="@drawable/ic_cattle"
                    android:layout_width="80dp"
                    android:tint="@color/colorAccent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:lines="1"
                        android:text="My Cows"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:paddingEnd="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:text="Smart Ear Tag dan PulseHealth monitoring Real-Time berteknologi tinggi"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>