<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ShopOrderActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bt_order_now"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:background="@color/white"
                            android:text="Item yang dipesan "
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="gravity"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    <ListView
                            android:id="@+id/lv_order_item_list"
                            android:padding="10dp"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="Tambah Order +"
                            android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:background="@color/white"
                            android:text="Dikirim ke "
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="gravity"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:drawableStart="@drawable/ic_my_location_black_24dp"
                            android:drawableEnd="@drawable/ic_edit_black_24dp"
                            android:drawableTint="@color/colorAccent"
                            android:drawablePadding="10dp"
                            android:textAlignment="gravity"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content"
                            tools:targetApi="m"/>
                    <fragment
                            android:id="@+id/map_shop_order"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"/>
                    <EditText
                            android:id="@+id/et_note"
                            android:drawableStart="@drawable/ic_bookmark_black_24dp"
                            android:padding="10dp"
                            android:drawableTint="@color/colorAccent"
                            android:drawablePadding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Catatan untuk toko"
                            android:textSize="14sp"
                            android:textAlignment="gravity"
                            android:gravity="top"
                            android:minLines="1"
                            android:maxLines="5"
                            tools:targetApi="m"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:background="@color/white"
                            android:text="Detil pembayaran"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAlignment="gravity"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:padding="10dp"
                                android:background="@color/white"
                                android:text="Harga total barang"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="gravity"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/tv_total_item_price"
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:padding="10dp"
                                android:background="@color/white"
                                android:text="12000"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="gravity"
                                android:gravity="end"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:padding="10dp"
                                android:background="@color/white"
                                android:text="Ongkos kirim"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="gravity"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/tv_deliv_fee"
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:padding="10dp"
                                android:background="@color/white"
                                android:text="5000"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="gravity"
                                android:gravity="end"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/defaultUnselected"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:background="@color/white"
                                android:text="Harga total"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="gravity"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:id="@+id/tv_total_price"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:background="@color/white"
                                android:text="5000"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:textAlignment="gravity"
                                android:gravity="end"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <Button
            android:id="@+id/bt_order_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Pesan Sekarang"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>