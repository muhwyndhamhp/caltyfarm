<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.RoomListActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_cow_list"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="10dp">
        <com.caltyfarm.caltyfarm.customElements.BebasNeueTextView
                android:id="@+id/tv_title_cow_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daftar_status_sapi"
                android:textColor="@color/white"
                android:textSize="18sp"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cow_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_cow_list"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>