<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_vet_profile"
                android:src="@drawable/images"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
            <TextView
                    android:id="@+id/tv_vet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="drh Denok Asih Tri Ranti"/>
            <TextView
                    android:id="@+id/tv_vet_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Dokter Hewan"/>
            <TextView
                    android:id="@+id/tv_vet_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Pengalaman 3 Tahun"/>
            <TextView
                    android:id="@+id/tv_vet_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Rp. 35.000,-"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/tv_vet_time"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Tersedia Pukul 10:00-14:00 WIB"
            tools:targetApi="m"/>
    <TextView
            android:id="@+id/tv_vet_school"
            android:drawableStart="@drawable/ic_school_black_24dp"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="* Universitas Gadjah Mada"
            tools:targetApi="m"/>
    <TextView
            android:id="@+id/tv_vet_affiliate"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawableStart="@drawable/ic_local_hospital_black_24dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Klinik Hewan Mandiri Margasari"
            tools:targetApi="m"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_vet_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:textColor="@color/colorAccent"
                android:text="+6282221584456"/>
        <Button
                android:id="@+id/bt_halo_cow_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:layout_gravity="end"/>
    </LinearLayout>

</LinearLayout>